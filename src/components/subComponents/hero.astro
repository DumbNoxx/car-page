---
import { Image } from "astro:assets";
---

<div class="hero">
  <div class="background-hero">
    <figure>
      <Image
        src="https://i.imgur.com/xJNhvVz.jpeg"
        alt="lamborgini"
        width="640"
        height="640"
        loading="eager"
      />
      <figcaption class="overlay">
        <h1>Find Your Dream Car Today</h1>
        <p>
          Discover premium vehicles with unbeatable prices and exceptional
          service
        </p>
        <a href="/inventory">Browse Inventory</a>
      </figcaption>
    </figure>
  </div>
</div>

<style>
  .background-hero {
    position: relative;
    width: 100%;
    height: 100%;

    & figure {
      margin: 0;
      width: 100%;
      height: 100%;
      position: relative;
      overflow: hidden;

      & img {
        width: 100%;
        opacity: 0.3;
        height: 100;
        object-fit: cover;
      }
    }
    & .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-color: #00000080;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;

      & h1 {
        width: 44rem;
        text-align: center;
        font-size: 4.5rem;
        font-weight: 900;
        color: white;
      }

      & p {
        margin-top: -2rem;
        width: 44rem;
        text-align: center;
        font-size: 1.5rem;
        color: white;
      }

      & a {
        display: inline-flex;
        align-items: center;
        text-decoration: none;
        background: #005bc1;
        border: none;
        padding: 0.5rem;
        border-radius: 0.5rem;
        color: white;
        font-weight: bold;
        width: 12rem;
        height: 2rem;
        padding-left: 5rem;
        transition: 0.2s ease;

        &:hover {
          background-color: #0051ac;
          cursor: pointer;
        }
      }
    }
  }
</style>
